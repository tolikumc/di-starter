{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "moduleResolution": "node",
      "outDir": "./bin",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true
   },
   "compileOnSave": true,
   "exclude":[
      "node_modules"
   ],
   "include": [
      "src"
   ]
}